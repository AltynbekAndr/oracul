<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/title2"
    android:orientation="vertical"
    tools:context="com.kg.oracul.Categori"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="25dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="35dp"
            android:clickable="true"
            android:onClick="web1"
            android:scrollIndicators="bottom"
            android:id="@+id/mylinearanim1"
            android:visibility="visible"
            style="@style/LButton"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пдд"
                android:id="@+id/textView13"
                android:textSize="20dp"
                android:layout_weight="1"
                android:clickable="false"
                android:singleLine="false"
                android:textColor="#555454" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/imageView2"
                android:src="@drawable/pdd" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="35dp"
            android:onClick="web2"
            android:clickable="true"
            android:scrollIndicators="bottom"
            android:id="@+id/mylinearanim2"
            android:visibility="visible"
            style="@style/LButton"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Коррупция"
                android:id="@+id/textView14"
                android:textSize="20dp"
                android:layout_weight="1"
                android:clickable="false"
                android:textColor="#555454" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="35dp"
                android:id="@+id/imageView3"
                android:src="@drawable/corrupcia" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="35dp"
            android:onClick="web3"
            android:clickable="true"
            android:scrollIndicators="bottom"
            android:id="@+id/mylinearanim3"
            android:visibility="visible"
            style="@style/LButton"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Насилие"
                android:id="@+id/textView15"
                android:textSize="20dp"
                android:layout_weight="1"
                android:clickable="false"
                android:textColor="#555454" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="35dp"
                android:id="@+id/imageView4"
                android:src="@drawable/ic_do_not_disturb_24dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="35dp"
            android:clickable="true"
            android:id="@+id/mylinearanim4"
            android:visibility="visible"
            style="@style/LButton"
            android:layout_marginBottom="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Нарушение в общ.месте"
                android:id="@+id/textView16"
                android:textSize="20dp"
                android:layout_weight="1"
                android:clickable="true"
                android:textColor="#555454" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="35dp"
                android:id="@+id/imageView5"
                android:src="@drawable/narushenie" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="35dp"
            android:clickable="true"
            android:id="@+id/mylinearanim5"
            android:visibility="visible"
            style="@style/LButton">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Прочее..."
                android:id="@+id/textView17"
                android:textSize="20dp"
                android:clickable="true"
                android:layout_weight="1"
                android:textColor="#555454" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="35dp"
                android:id="@+id/imageView7"
                android:src="@drawable/other" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="35dp"
            style="@style/LButton"
            android:clickable="true"
            android:onClick="myvideos">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Моя последняя заявка"
                android:id="@+id/textView23"
                android:textColor="#555454"
                android:textSize="20dp"
                android:clickable="false"
                android:scrollIndicators="bottom"
                android:layout_weight="1"
                android:singleLine="false" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="35dp"
                android:id="@+id/imageView8"
                android:src="@drawable/iam" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="main"
            android:id="@+id/mainlinear1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:src="@drawable/ic_account_balance_24dp"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Главная"
                android:id="@+id/textView2"
                android:textSize="11dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="main"
            android:id="@+id/mainlinear2"
            android:visibility="gone">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/domik2"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Главная"
                android:id="@+id/textView"
                android:textSize="11dp"
                android:textColor="#e01937" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="categories"
            android:id="@+id/categoriilinear1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:src="@drawable/ic_view_module_24dp"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Категории"
                android:id="@+id/textView3"
                android:textSize="11dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="main"
            android:id="@+id/categoriilinear2"
            android:visibility="gone">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton7"
                android:src="@drawable/categorii2"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Категории"
                android:id="@+id/textView7"
                android:textSize="11dp"
                android:textColor="#e01937" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="addVideoIntent"
            android:id="@+id/addlinear1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton4"
                android:src="@drawable/ic_note_add_24dp"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавить"
                android:id="@+id/textView4"
                android:textSize="11dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="main"
            android:id="@+id/addlinear2"
            android:visibility="gone">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton8"
                android:src="@drawable/add2"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавить"
                android:id="@+id/textView18"
                android:textSize="11dp"
                android:textColor="#e01937" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="chats"
            android:id="@+id/chatlinear1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton5"
                android:src="@drawable/ic_forum_24dp"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Чаты"
                android:id="@+id/textView5"
                android:textSize="11dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="main"
            android:id="@+id/chatlinear2"
            android:visibility="gone">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton9"
                android:src="@drawable/chat2"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Чаты"
                android:id="@+id/textView19"
                android:textSize="11dp"
                android:textColor="#e01937" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="profile"
            android:id="@+id/profilelinear1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton6"
                android:src="@drawable/ic_person_outline_24dp"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Профиль"
                android:id="@+id/textView6"
                android:textSize="11dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="main"
            android:id="@+id/profilelinear2"
            android:visibility="gone">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton10"
                android:src="@drawable/profile2"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Профиль"
                android:id="@+id/textView20"
                android:textSize="11dp"
                android:textColor="#e01937" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
