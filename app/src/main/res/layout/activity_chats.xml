<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kg.oracul.Chats"
    android:background="#ffffff"
    android:id="@+id/titlevertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Темы:Пдд"
            android:id="@+id/textView31"
            android:textSize="20dp"
            android:textColor="#555454"
            android:clickable="true"
            style="@style/LButton"
            android:layout_marginBottom="1dp"
            android:textAlignment="textStart"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Темы:Корупция"
            android:id="@+id/textView32"
            android:textSize="20dp"
            android:textColor="#555454"
            android:clickable="true"
            style="@style/LButton"
            android:textAlignment="textStart"
            android:layout_marginBottom="1dp"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Темы:Насилие"
            android:id="@+id/textView33"
            android:textSize="20dp"
            android:textColor="#555454"
            android:clickable="true"
            style="@style/LButton"
            android:textAlignment="textStart"
            android:layout_marginBottom="1dp"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Темы:Нарушения в общ.местах"
            android:id="@+id/textView34"
            android:textSize="20dp"
            android:textColor="#555454"
            android:clickable="true"
            style="@style/LButton"
            android:textAlignment="textStart"
            android:layout_marginBottom="1dp"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Темы:Разное"
            android:id="@+id/textView35"
            android:textSize="20dp"
            android:textColor="#555454"
            android:clickable="true"
            style="@style/LButton"
            android:textAlignment="textStart"
            android:layout_marginBottom="1dp"
            android:paddingLeft="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Мои темы"
            android:id="@+id/textView36"
            android:textSize="20dp"
            android:textColor="#555454"
            android:clickable="true"
            style="@style/LButton"
            android:textAlignment="textStart"
            android:layout_marginBottom="1dp"
            android:paddingLeft="15dp" />

        <TextView
            style="@style/LButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Создать тему"
            android:id="@+id/textView37"
            android:textSize="20dp"
            android:textColor="#555454"
            android:clickable="true"
            android:textAlignment="textStart"
            android:layout_marginBottom="1dp"
            android:onClick="createSubject"
            android:paddingLeft="15dp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="main"
            android:id="@+id/mainlinear1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:src="@drawable/ic_account_balance_24dp"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Главная"
                android:id="@+id/textView2"
                android:textSize="11dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="main"
            android:id="@+id/mainlinear2"
            android:visibility="gone">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/domik2"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Главная"
                android:id="@+id/textView"
                android:textSize="11dp"
                android:textColor="#e01937" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="categories"
            android:id="@+id/categoriilinear1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:src="@drawable/ic_view_module_24dp"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Категории"
                android:id="@+id/textView3"
                android:textSize="11dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="main"
            android:id="@+id/categoriilinear2"
            android:visibility="gone">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton7"
                android:src="@drawable/categorii2"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Категории"
                android:id="@+id/textView7"
                android:textSize="11dp"
                android:textColor="#e01937" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="addVideoIntent"
            android:id="@+id/addlinear1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton4"
                android:src="@drawable/ic_note_add_24dp"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавить"
                android:id="@+id/textView4"
                android:textSize="11dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="main"
            android:id="@+id/addlinear2"
            android:visibility="gone">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton8"
                android:src="@drawable/add2"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавить"
                android:id="@+id/textView18"
                android:textSize="11dp"
                android:textColor="#e01937" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="chats"
            android:id="@+id/chatlinear1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton5"
                android:src="@drawable/ic_forum_24dp"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Чаты"
                android:id="@+id/textView5"
                android:textSize="11dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="main"
            android:id="@+id/chatlinear2"
            android:visibility="gone">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton9"
                android:src="@drawable/chat2"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Чаты"
                android:id="@+id/textView19"
                android:textSize="11dp"
                android:textColor="#e01937" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="profile"
            android:id="@+id/profilelinear1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton6"
                android:src="@drawable/ic_person_outline_24dp"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Профиль"
                android:id="@+id/textView6"
                android:textSize="11dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="main"
            android:id="@+id/profilelinear2"
            android:visibility="gone">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton10"
                android:src="@drawable/profile2"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Профиль"
                android:id="@+id/textView20"
                android:textSize="11dp"
                android:textColor="#e01937" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
