<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kg.oracul.MyVideos">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="название видео"
            android:id="@+id/textView24"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="вы не отправляли видео"
            android:id="@+id/textView25"
            android:layout_margin="5dp"
            android:textColor="#2421cd"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="дата отправки"
            android:id="@+id/textView26"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="вы не отправляли видео"
            android:id="@+id/textView27"
            android:layout_margin="5dp"
            android:textColor="#2421cd"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:text="еще не подтверждено..."
            android:id="@+id/textView28"
            android:layout_marginTop="50dp"
            android:textColor="#e70b0b"
            android:textAlignment="center"
            android:background="#b2a8a8"
            android:gravity="center"
            android:layout_marginBottom="50dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="список"
            android:id="@+id/buttonbb"
            style="@style/HabraThemeButton"
            android:textColor="#484747" />
    </LinearLayout>

</LinearLayout>
